<%= provide(:title, "Rewards") %>

<div class="small-12 large-6 large-centered columns">
<div class="text-center"><h1>Rewards</h1></div>

	<%= form_for([@project,@reward]) do |f| %>

		<%= f.label :amount %>
		<%= f.number_field :amount %>

		<%= f.label :description %>
		<%= f.text_area :description, style: "height:13rem" %>

		<%= f.submit "Submit", class: "button radius" %>

	<% end %>
</div>


