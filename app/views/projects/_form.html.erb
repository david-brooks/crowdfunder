<%= form_for @project, html: {multipart:true} do |f| %>
	<%= render "shared/error_messages", object: f.object %>

	  <div class="field">
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </div>
	  <div class="field">
	    <%= f.label :description %><br>
	    <%= f.text_area :description, style: "height: 20rem" %>
	  </div>
	  <div class="field">
	  	<%= f.file_field :image %>
	  </div>
	  <div class="field">
	  	<%= f.label :remote_image_url, "or image URL" %><br />
		<%= f.text_field :remote_image_url %>
	  </div>
	  <div class="field">
	    <%= f.label :goal %><br>
	    <%= f.number_field :goal %>
	  </div>
	  <div class="field">
	    <%= f.label :category %><br>
	    <%= f.select :category, options_for_select(@project.categories) %>
	  </div>

	  <div class="field">
	    <%= f.label :start_date %><br>
	    <%= f.date_select :start_date, start_year: Time.now.year, default: 3.days.from_now %>
	  </div>
	  <div class="field">
	    <%= f.label :end_date %><br>
	    <%= f.date_select :end_date, start_year: Time.now.year, default: 6.days.from_now %>
	  </div>
	  


	  <div class="text-center"><%= f.submit "Submit", class: "button radius" %></div>

<% end %>