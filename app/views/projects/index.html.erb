<div class="row">
  <div class="small-12">
    <div class="small-12 text-center"><h1>Projects</h1></div>

      <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-3">

        <div class="row text-center">
          <% ["Art","Comics","Dance","Design","Fashion","Film & Video","Food","Games","Music","Photography","Publishing","Technology","Theater"].each do |c| %>

            <h3 class="category"><%= link_to c, "#" %> | </h3>

          <% end %>
        </div>


        <%= form_tag projects_path, method: :get, authentication: false, id: 'project-form' do %>

          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", class: "button radius" %>

        <% end %>

                 <!-- image slider  -->
         <link rel=“stylesheet” type=“text/css” href=“css/custom.css.scss”>
        <ul class="example-orbit" data-orbit>
          <li>
            <img src="http://images.gizmag.com/gallery_lrg/meta-augmented-reality-glasses.jpg" alt="slide 1" />
            <div class="orbit-caption">
              Meta Augmented Reality Glasses.
            </div>
          </li>
          <li>
            <img src="http://www.popsci.com/files/imagecache/article_image_large/articles/oculus_rift.jpg" alt="slide 2" />
            <div class="orbit-caption">
             Occulus Rift.
            </div>
          </li>
          <li>
            <img src="http://cdn2.ubergizmo.com/wp-content/uploads/2013/04/ouya-console-underperforms-640x530.jpg" alt="slide 3" />
            <div class="orbit-caption">
              Ouya Game Console.
            </div>
          </li>
        </ul>


        <div class="small-block-grid-2 medium-block-grid-3 large-block-grid-1" id="projects">
          <% @projects.each do |project| %>
            <li>             
              <p class="center"><%= image_tag(project.image_url(:thumb)) %></p>
              <p class="center">Project: <%= link_to truncate(project.title, length: 30), project %><br>
              <% if project.owner == current_user && signed_in? %>
                <%= link_to "Edit", edit_project_path(project) %> |
                <%= link_to "Delete", project, data: {confirm: "Are you sure?"}, method: :delete %>
              <% end %>
              <p class="center">Description: <%= project.description %></p>
              <p class="center">Goal: $<%= project.goal %></p>

              </p>

            </li>
          <% end %>
        </div>

        

      </ul>

    

  </div>
</div>